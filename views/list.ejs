    <%- include('header'); -%>
    <div class="box" id="heading">
        <h1><%=listTitle%></h1>
    </div>
    <div class="box">
        <%Lists.items.forEach(currentItem=> {%>
           <div class="item">
            <form action="/delete" method="post">
                <input type="hidden" name="listName" value="<%=Lists.name%>">
                <input type="checkbox" name="deleteItem" value=<%=currentItem._id%>  onChange="this.form.submit()">  
            </form> 
            <p><%=currentItem.name%></p> 
            </div> 
       <%});%>
            
        <form action="/" method="post" class="item">
            <input type="text" name="item"  placeholder="New Item" autocomplete="off">
            <button type="submit"class="plus_button" name="button" value= <%=Lists.name%> >+</button>
        </form>
    </div>
    <%- include('footer'); -%>

